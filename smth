<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Will You Be My Valentine?</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            background-color: #fff5f7;
            overflow: hidden;
            touch-action: manipulation;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        #game-container {
            position: relative;
            width: 100vw;
            height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .heart {
            position: absolute;
            color: #ff4d6d;
            pointer-events: none;
            z-index: 0;
        }

        /* Cursor Trail */
        .trail-heart {
            position: absolute;
            pointer-events: none;
            font-size: 14px;
            animation: fade-out 1s linear forwards;
            z-index: 100;
        }

        @keyframes fade-out {
            0% { opacity: 1; transform: translateY(0) scale(1); }
            100% { opacity: 0; transform: translateY(-20px) scale(0.5); }
        }

        #bow-container {
            position: absolute;
            bottom: 50px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 20;
            cursor: crosshair;
        }

        .button-target {
            transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            border-radius: 9999px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            user-select: none;
        }

        #yes-btn {
            background-color: #ff4d6d;
            color: white;
            width: 140px;
            height: 60px;
            animation: pulse-heart 1.5s infinite;
        }

        @keyframes pulse-heart {
            0% { transform: scale(1); box-shadow: 0 0 0 0 rgba(255, 77, 109, 0.4); }
            70% { transform: scale(1.05); box-shadow: 0 0 0 15px rgba(255, 77, 109, 0); }
            100% { transform: scale(1); box-shadow: 0 0 0 0 rgba(255, 77, 109, 0); }
        }

        #no-btn {
            background-color: #cbd5e1;
            color: #475569;
            width: 80px;
            height: 40px;
        }

        .arrow {
            position: absolute;
            width: 40px;
            height: 4px;
            background: #5d4037;
            border-radius: 2px;
            z-index: 15;
        }

        .arrow::after {
            content: '‚ù§';
            position: absolute;
            right: -10px;
            top: -8px;
            color: #ff4d6d;
            font-size: 20px;
        }

        .rose-particle {
            position: absolute;
            font-size: 30px;
            pointer-events: none;
            z-index: 50;
            animation: float-up 2.5s ease-out forwards;
        }

        @keyframes float-up {
            0% { transform: translate(0, 0) rotate(0deg); opacity: 1; }
            100% { transform: translate(var(--tw-x), var(--tw-y)) rotate(720deg); opacity: 0; }
        }

        #success-modal {
            display: none;
            position: fixed;
            inset: 0;
            background: rgba(255, 245, 247, 0.98);
            z-index: 200;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
            padding: 20px;
        }

        .floating-message {
            position: absolute;
            color: #ff8fa3;
            font-weight: bold;
            pointer-events: none;
            animation: float-msg 1.5s ease-out forwards;
        }

        @keyframes float-msg {
            to { transform: translateY(-50px); opacity: 0; }
        }
