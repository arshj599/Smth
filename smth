<body>

    <div id="game-container">
        <h1 id="main-prompt" class="text-4xl md:text-6xl font-bold text-pink-600 mb-20 z-10 text-center px-4">
            Will you be my Valentine, Aanya?
        </h1>

        <div class="flex flex-col md:flex-row gap-8 mb-40 z-10 relative w-full justify-center items-center h-32">
            <div id="yes-btn" class="button-target text-2xl">YES! üíñ</div>
            <div id="no-btn" class="button-target text-sm">NO</div>
        </div>

        <div id="bow-container">
            <svg width="120" height="120" viewBox="0 0 100 100" id="bow-svg">
                <!-- String -->
                <line id="bow-string" x1="50" y1="10" x2="50" y2="90" stroke="#fce7f3" stroke-width="2" />
                <!-- Bow -->
                <path d="M50 10 Q 10 50 50 90" fill="none" stroke="#db2777" stroke-width="6" stroke-linecap="round" />
                <!-- Grip -->
                <rect x="25" y="45" width="10" height="10" fill="#be185d" rx="2" />
            </svg>
        </div>
    </div>

    <div id="success-modal">
        <div class="bg-white p-10 rounded-3xl shadow-2xl border-4 border-pink-300 max-w-lg relative overflow-hidden">
            <!-- Sparkles/Confetti background effect -->
            <div class="text-7xl mb-6">üíñüëëüåπ</div>
            <h2 class="text-3xl font-bold text-pink-600 mb-6">Here's a haiku I made for you.</h2>
            <div class="italic text-2xl text-gray-700 leading-relaxed space-y-4 font-serif">
                <p>I love you Aanya,</p>
                <p>My sweetest little princess,</p>
                <p>Always meri jaan.</p>
                <p class="mt-6 font-bold text-pink-500 not-italic text-lg">‚Äî Arsh Jha</p>
            </div>
            <button onclick="location.reload()" class="mt-10 bg-pink-500 text-white px-8 py-3 rounded-full hover:bg-pink-600 transition-all hover:scale-110 shadow-lg">
                Send More Love!
            </button>
        </div>
    </div>

    <script>
        const yesBtn = document.getElementById('yes-btn');
        const noBtn = document.getElementById('no-btn');
        const bowContainer = document.getElementById('bow-container');
        const gameContainer = document.getElementById('game-container');
        const successModal = document.getElementById('success-modal');
        let yesScale = 1;
        let isDrawing = false;
        let angle = 0;

        // 1. Cursor Heart Trail
        window.addEventListener('mousemove', (e) => {
            if (Math.random() > 0.8) {
                const trail = document.createElement('div');
                trail.className = 'trail-heart';
                trail.innerHTML = ['‚ù§', 'üíñ', '‚ú®', 'üå∏'][Math.floor(Math.random() * 4)];
                trail.style.left = e.clientX + 'px';
                trail.style.top = e.clientY + 'px';
                trail.style.color = `hsl(${Math.random() * 20 + 340}, 100%, 70%)`;
                document.body.appendChild(trail);
                setTimeout(() => trail.remove(), 1000);
            }
        });

        // Background floating hearts
        function createHeart() {
            const heart = document.createElement('div');
            heart.className = 'heart';
            heart.innerHTML = ['‚ù§', 'üíï', 'üíó'][Math.floor(Math.random() * 3)];
            heart.style.left = Math.random() * 100 + 'vw';
            heart.style.top = '100vh';
            heart.style.fontSize = (Math.random() * 20 + 15) + 'px';
            heart.style.opacity = Math.random() * 0.5 + 0.2;
            gameContainer.appendChild(heart);

            const duration = Math.random() * 4 + 3;
            heart.animate([
                { transform: 'translateY(0) rotate(0deg)' },
                { transform: `translateY(-110vh) translateX(${(Math.random() - 0.5) * 200}px) rotate(360deg)` }
            ], {
                duration: duration * 1000,
                easing: 'ease-in'
            });

            setTimeout(() => heart.remove(), duration * 1000);
        }
        setInterval(createHeart, 400);

        // Aiming Logic
        window.addEventListener('mousemove', (e) => {
            const rect = bowContainer.getBoundingClientRect();
            const centerX = rect.left + rect.width / 2;
            const centerY = rect.top + rect.height / 2;
            
            angle = Math.atan2(e.clientY - centerY, e.clientX - centerX);
            const deg = angle * (180 / Math.PI) + 90;
            bowContainer.style.transform = `translateX(-50%) rotate(${deg}deg)`;
        });

        // Shooting Logic
        window.addEventListener('mousedown', () => { isDrawing = true; });
        window.addEventListener('mouseup', () => {
            if (!isDrawing) return;
            isDrawing = false;
            fireArrow();
        });

        function fireArrow() {
            const arrow = document.createElement('div');
            arrow.className = 'arrow';
            
            const rect = bowContainer.getBoundingClientRect();
            const startX = rect.left + rect.width / 2;
            const startY = rect.top + rect.height / 2;
            
            arrow.style.left = startX + 'px';
            arrow.style.top = startY + 'px';
            arrow.style.transform = `rotate(${angle * (180 / Math.PI)}deg)`;
            document.body.appendChild(arrow);

            const velocity = 20;
            const vx = Math.cos(angle) * velocity;
            const vy = Math.sin(angle) * velocity;
            
            let posX = startX;
            let posY = startY;

            const moveInterval = setInterval(() => {
                posX += vx;
                posY += vy;
                arrow.style.left = posX + 'px';
                arrow.style.top = posY + 'px';

                const yesRect = yesBtn.getBoundingClientRect();
                const noRect = noBtn.getBoundingClientRect();

                if (posX > yesRect.left && posX < yesRect.right && posY > yesRect.top && posY < yesRect.bottom) {
                    handleYesHit();
                    clearInterval(moveInterval);
                    arrow.remove();
                } else if (posX > noRect.left && posX < noRect.right && posY > noRect.top && posY < noRect.bottom) {
                    handleNoHit();
                    clearInterval(moveInterval);
                    arrow.remove();
                }

                if (posX < -50 || posX > window.innerWidth + 50 || posY < -50 || posY > window.innerHeight + 50) {
                    clearInterval(moveInterval);
                    arrow.remove();
                }
            }, 10);
        }

        function handleNoHit() {
            yesScale += 0.4;
            yesBtn.style.transform = `scale(${yesScale})`;
            
            // Random messages when hitting NO
            const messages = ["More Love!", "Closer!", "Growing!", "Princess Power!"];
            const msg = document.createElement('div');
            msg.className = "floating-message";
            msg.innerText = messages[Math.floor(Math.random() * messages.length)];
            msg.style.left = noBtn.getBoundingClientRect().left + "px";
            msg.style.top = noBtn.getBoundingClientRect().top + "px";
            document.body.appendChild(msg);
            setTimeout(() => msg.remove(), 1500);

            // Move No button
            const x = (Math.random() - 0.5) * 300;
            const y = (Math.random() - 0.5) * 150;
            noBtn.style.transform = `translate(${x}px, ${y}px)`;
        }

        function handleYesHit() {
            const rect = yesBtn.getBoundingClientRect();
            const centerX = rect.left + rect.width / 2;
            const centerY = rect.top + rect.height / 2;

            // Massive Rose Explosion
            for (let i = 0; i < 80; i++) {
                const rose = document.createElement('div');
                rose.className = 'rose-particle';
                rose.innerHTML = ['üåπ', 'üå∏', 'üíñ', 'üíê', 'üíé'][Math.floor(Math.random() * 5)];
                rose.style.left = centerX + 'px';
                rose.style.top = centerY + 'px';
                
                const tx = (Math.random() - 0.5) * 1000;
                const ty = (Math.random() - 0.5) * 1000 - 200;
                rose.style.setProperty('--tw-x', `${tx}px`);
                rose.style.setProperty('--tw-y', `${ty}px`);
                
                document.body.appendChild(rose);
                setTimeout(() => rose.remove(), 2500);
            }

            yesBtn.style.transition = "all 0.5s ease-out";
            yesBtn.style.transform = 'scale(5)';
            yesBtn.style.opacity = '0';
            
            setTimeout(() => {
                successModal.style.display = 'flex';
                // Add an extra little rain of hearts in the modal
                setInterval(() => {
                    if (successModal.style.display === 'flex') {
                        const mHeart = document.createElement('div');
                        mHeart.className = 'heart';
                        mHeart.innerHTML = 'üíñ';
                        mHeart.style.left = Math.random() * 100 + 'vw';
                        mHeart.style.top = '-20px';
                        document.body.appendChild(mHeart);
                        mHeart.animate([
                            { transform: 'translateY(0)' },
                            { transform: 'translateY(100vh)' }
                        ], { duration: 3000 });
                        setTimeout(() => mHeart.remove(), 3000);
                    }
                }, 200);
            }, 600);
        }
    </script>
</body>
</html>
